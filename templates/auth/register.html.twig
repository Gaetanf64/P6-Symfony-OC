{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/auth.css" />
{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">


        <!--Register Section-->
        <h2 class="haut contact">Création de votre compte</h2>

        {{ form_start(formRegister) }}
            {{ form_widget(formRegister.username) }}
            {{ form_errors(formRegister.username) }}

            {{ form_widget(formRegister.email) }}
            {{ form_errors(formRegister.email) }}

            {{ form_widget(formRegister.password) }}
            {{ form_errors(formRegister.password) }}

            {{ form_widget(formRegister.confirmPassword) }}
            {{ form_errors(formRegister.confirmPassword) }}
        {{ form_end(formRegister) }}

        <p class="haut droiteAnnuler"><a class="annuler" href="/">Retour à la page d'accueil</a></p>

        {% for message in app.flashes('success') %}
            <div class="haut">
                {{ message }}
            </div>
        {% endfor %}

    </div>

{% endblock %}