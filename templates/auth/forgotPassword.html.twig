{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/auth.css" />
{% endblock %}

{% block title %}Forgot Password{% endblock %}

{% block body %}

    <div class="container">


        <!--Forgot Password Section-->
        <h1 class="haut contact">Mot de passe oubli√©</h1>

        {{ form_start(formForgotPassword) }}
            {{ form_widget(formForgotPassword.email) }}
            {{ form_errors(formForgotPassword.email) }}
        {{ form_end(formForgotPassword) }}

        {% for message in app.flashes('forgotPassword') %}
            <div class="haut">
                {{ message }}
            </div>
        {% endfor %}

    </div>

{% endblock %}